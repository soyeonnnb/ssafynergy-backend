<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.model.dao.challenge.ChallengeParticipateDao">
	<insert id="insert" parameterType="ChallengeParticipate" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO Challenge_participate
		(User_id, Challenge_id)
		VALUES
		(#{UserId}, #{ChallengeId})
	</insert>
	<delete id = "delete" parameterType="int">
		DELETE FROM Challenge_participate
		WHERE User_id = #{UserId} and Challenge_id = #{ChallengeId}
	</delete>
	<update id="update" parameterType="ChallengeParticipate">
		UPDATE Challenge
		SET 
			is_giveup = #{isGiveup}
		WHERE User_id = #{UserId} and Challenge_id = #{ChallengeId}
	</update>
	<select id="select" parameterType="String" resultType="ChallengeParticipate">
		SELECT * FROM Challenge_participate WHERE user_id=#{userId}
	</select>
</mapper>
