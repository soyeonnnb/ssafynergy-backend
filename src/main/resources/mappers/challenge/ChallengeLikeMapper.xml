<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.model.dao.challenge.ChallengeLikeDao">
	<insert id="insert" parameterType="ChallengeLike">
		INSERT INTO challengeLike
		(User_id, Challenge_id)
		VALUES
		(#{UserId}, #{ChallengeId})
	</insert>
	<delete id = "delete" parameterType="int">
		DELETE FROM challengeLike
		WHERE id = #{id}
	</delete>
	<select id="search" parameterType="String" resultType="ChallengeLike">
		SELECT * FROM challengeLike WHERE userId = #{userId}
	</select>
</mapper>
